<?xml version="1.0" encoding="utf-8"?>
<com.cz.widgets.sample.zoomlayout.table.test.TestLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.cz.widgets.textview.span.callback.SpannableImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_vertical" />

    <com.cz.widgets.textview.span.callback.SpannableTextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12dp"
        android:textColor="@color/text_white_2accent_text_selector"
        android:background="@drawable/primary_selector"
        android:gravity="center_vertical"/>

</com.cz.widgets.sample.zoomlayout.table.test.TestLinearLayout>
