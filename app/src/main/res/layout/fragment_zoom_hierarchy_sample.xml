<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zoomlayout.hierarchy.ZoomHierarchySampleActivity">

    <com.cz.widgets.zoomlayout.tree.hierarchy.HierarchyLayout
        android:id="@+id/hierarchyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zoom_minimum="0.6"
        app:zoom_maximum="4"
        android:background="@android:color/black"/>

    <com.cz.widgets.zoomlayout.tree.PreViewLayout
        android:id="@+id/previewLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_800"/>

    <Button
        android:id="@+id/scaleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="48dp"
        android:text="Scale"/>

</FrameLayout>