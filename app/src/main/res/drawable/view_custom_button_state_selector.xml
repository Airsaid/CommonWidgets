<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto">
    <item  android:state_selected="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/md_red_900"/>
            <stroke android:color="@color/md_red_500" android:width="1dp"/>
        </shape>
    </item>

    <item  auto:state1="true">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/md_brown_900"/>
            <stroke android:color="@color/md_brown_500" android:width="1dp"/>
        </shape>
    </item>

    <item  android:state_selected="false">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@color/md_green_900"/>
            <stroke android:color="@color/md_green_500" android:width="1dp"/>
        </shape>
    </item>


</selector>